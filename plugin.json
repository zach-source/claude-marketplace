{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/plugin-schema.json",
  "name": "and-then",
  "version": "1.0.0",
  "description": "Sequential task queue that auto-advances when each task completes",
  "author": "ztaylor",
  "repository": "https://github.com/zach-source/z-claude-plugins",
  "commands": [
    "commands/and-then.md",
    "commands/and-then-add.md",
    "commands/and-then-skip.md",
    "commands/and-then-status.md",
    "commands/and-then-cancel.md"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/and-then-stop-hook.sh",
        "timeout": 15,
        "description": "And-then queue - advances to next task when current completes"
      }
    ]
  }
}
